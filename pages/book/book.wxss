/* pages/book/book.wxss */

.container{
  display:flex;
  flex-direction:column;
  align-items:center;
  
}

.header{
  background-color:#f9f9f9;
  width:690rpx;
  height:68rpx;
  border-radius:33rpx;

  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  position:fixed;
  z-index:99;
}

.box{
  height:68rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
}

.header image{
  width:28rpx;
  height:28rpx;
  margin-right:8rpx;
}

.header text{
  display:inline-block;
  font-size:26rpx;
  line-height:68rpx;
  color:#999999; 
} 

.sub-container{
  width:100%;
  background-color:#f9f9f9;
  margin-top:88rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
}

.sub-container .jingxuan{
  width:107rpx;
  height:34rpx;
  margin-top:38rpx;
  margin-bottom:28rpx;
}

.book-container{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  padding:0 90rpx 0 90rpx;
  justify-content:space-between;
}

.book-container v-book{
  margin-bottom:60rpx;
}